{% extends 'default_frame.twig' %}

{% set body_class = 'mypage' %}

{% block main %}
    
    {% set is_application = false %}
    {% set current_url = app.request.server.get('REQUEST_URI')%}
    {% if 'app_mode' in current_url  %}
    	{% set is_application = true %}
    {% endif %}
    
    <div class="ec-role {% if is_application == false %}topitem_header{% endif %}" {% if is_application == true %}style="padding-top:120px;"{% endif %}>
        <div class="ec-pageHeader">
            <h1>{{ 'ログイン'|trans }}</h1>
        </div>
        
        <!-- 注意書き表示 -->
        <div style="margin-right:16px; margin-left:16px;">
	        <div style="padding: 1.5em 2em; margin: 1.5em auto; font-weight: bold; border: solid 2px #b1002a;">
		        この度、オンラインショップをリニューアルし、お店のポイントカードをオンラインでもご利用できるようになりました。<br>
		        お店のポイントカードをお持ちのお客様は、下記の情報をご用意いただき、ログインボタンよりお進みくださいませ。<br>
		        <br>
		        【ログイン情報】<br>
		        会員番号：ポイントカードに記載されている番号<br>
		        パスワード：ご登録のお電話番号　※ハイフン無し<br>
		        <br>
		        また、旧オンラインショップで会員登録済のお客様へは、後日メールにてログイン情報をお伝えいたします。<br>
		        パスワード等のお問い合わせに関しましてはお問い合わせフォームよりご連絡くださいませ。<br>
	        </div>
	    </div>
        
        <br>
        <div class="ec-off2Grid">
            <div class="ec-off2Grid__cell">
                <form name="login_mypage" id="login_mypage" method="post" action="{{ url('mypage_login') }}">
                    {% if app.session.flashBag.has('eccube.login.target.path') %}
                        {% for targetPath in app.session.flashBag.peek('eccube.login.target.path') %}
                            <input type="hidden" name="_target_path" value="{{ targetPath }}" />
                        {% endfor %}
                    {% endif %}
                    <div class="ec-login">
                        <div class="ec-login__icon">
                            <div class="ec-icon"><img src="{{ asset('assets/icon/user.svg') }}" alt=""></div>
                        </div>
                        <div class="ec-login__input">
                            <div class="ec-input">
                                {{ form_widget(form.customer_code, {'attr': {'style' : 'ime-mode: disabled;', 'placeholder' : '会員番号', 'autofocus': true}}) }}
                                {# login_emailをコメントアウトする #}
                                {# {{ form_widget(form.login_email, {'attr': {'style' : 'ime-mode: disabled;', 'placeholder' : 'メールアドレス', 'autofocus': true}}) }} #}
                                {{ form_widget(form.login_pass,  {'attr': {'placeholder' : 'パスワード' }}) }}
                            </div>
                            {% if BaseInfo.option_remember_me %}
                            <div class="ec-checkbox">
                                <label>
                                    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                                        <input type="hidden" name="login_memory" value="1">
                                    {% else %}
                                        {{ form_widget(form.login_memory, { 'label': '次回から自動的にログインする'|trans }) }}
                                    {% endif %}
                                </label>
                            </div>
                            {% endif %}
                            {% for reset_complete in app.session.flashbag.get('password_reset_complete') %}
                                <p>{{ reset_complete|trans }}</p>
                            {% endfor %}
                            {% if error %}
                                <p class="ec-errorMessage">{{ error.messageKey|trans(error.messageData, 'validators')|nl2br }}</p>
                            {% endif %}
                        </div>
                        <div class="ec-grid2">
                            <div class="ec-grid2__cell">
                                <div class="ec-login__actions">
                                    <button type="submit"
                                            class="ec-blockBtn--cancel">{{ 'ログイン'|trans }}</button>
                                </div>
                            </div>
                            <div class="ec-grid2__cell">
                                <div class="ec-login__link"><a class="ec-link"
                                                               href="{{ url('forgot') }}">{{ 'ログイン情報をお忘れですか？'|trans }}</a>
                                </div>
                                <div class="ec-login__link"><a class="ec-link"
                                                               href="{{ url('entry') }}">{{ '新規会員登録'|trans }}</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                </form>
            </div>
        </div>
    </div>
{% endblock %}