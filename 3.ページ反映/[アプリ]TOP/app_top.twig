    <div class="contents">
      <main>
        <div class="news inner" style="padding-top:0px;">
          <div class="news_page_list">
          	<table border="0" cellpadding="0" cellspacing="0" width="100%">
          		<tbody>
          			
          			{% set NewsList = repository('Eccube\\Entity\\News').getList() %}
          			
          			<tr>
          				<td class="line" height="1" bgcolor="#dadada" colspan="2">&nbsp;</td>
          			</tr>
          			{% for News in NewsList %}
	          			<tr bgcolor="#ffffff" height="25">
	          			
	          				<div style="border-bottom: 1px solid #ECECEC; padding:10px;">
	          					<a href="{{ url(eccube_config.eccube_user_data_route, {"route": "app_osirase_detail"}) }}?id={{ News.id }}">
		          					<div style="100%">
		          						<span style="color:#A9A9A9;">{{ News.publish_date|date_day }}</span>
		          						<span class="app_info_type">
		          							NEWS
		          						</span>
		          					</div>
		          					<div style="100%">
			          					{{ News.title }}
			          				</div>
		          				</a>
	          				</div>
	          				
	          			</tr>
          			{% endfor %}
          			
          		</tbody>
          	</table>
          </div><!-- .news_page_list-->
          <div class="pager">
          	<table border="0" cellpadding="0" cellspacing="0" width="368">
          		<tbody>
          			<tr>
          				<td class="line" height="10">&nbsp;</td>
