<script>
        // オプション選択必須チェック
        function checkOptionSelect() {
            /*
            * ※は有料
            * <キャンドルオプション>
            *  キャンドル大×数
            *  キャンドル小×数
            *  Noキャンドル×数 (1つめ) ※
            *  Noキャンドル×数 (2つめ) ※
            *  Noキャンドル×数 (3つめ) ※
            * <デコオプション>
            *  メッセージプレート種類
            *  メッセージ入力(1つめ)
            *  メッセージ入力(2つめ)※
            *  メッセージ入力(3つめ)※
            *  メッセージ入力(4つめ)※
            *  メッセージ入力(5つめ)※
            *  いちごUP      ※
            *  フルーツUP    ※
            *  生チョコUP    ※
            *  絵チョコ(4号) ※
            * <ギフト>
            * 包装方法
            * 熨斗紙の掛け方
            * 掛け紙・熨斗の種類
            * 上書き
            * 熨斗の名入れ入力
            * <袋オプション>
            * ポリ袋 中   ※
            * ポリ袋 大   ※
            * ポリ袋 特大 ※
            */
            
            //---[入力チェック]キャンドル---
			var option_form_candle = 'option_form_candle';
			if(document.getElementById(option_form_candle) != null){
				//キャンドルオプションがある場合
				
				// キャンドル大
				const candle_dai_num = document.getElementById("candle_dai_num");
				// キャンドル小
				const candle_syo_num = document.getElementById("candle_syo_num");
				// Noキャンドル 1つめ
				const candle_no1_no  = document.getElementById("candle_no1_no");
				const candle_no1_num = document.getElementById("candle_no1_num");
				// Noキャンドル 2つめ
				const candle_no2_no  = document.getElementById("candle_no2_no");
				const candle_no2_num = document.getElementById("candle_no2_num");
				// Noキャンドル 3つめ
				const candle_no3_no  = document.getElementById("candle_no3_no");
				const candle_no3_num = document.getElementById("candle_no3_num");
				
				//キャンドルの不要チェックがついていない場合、入力チェックを行う
				const chk_candle_nosel = document.getElementById("chk_candle_nosel");
				
				if(chk_candle_nosel.checked != true){
					//キャンドル大、キャンドル小、Noキャンドル のうち1つも入力がなければアラート表示
					if(candle_dai_num.value == '' &&
					   candle_syo_num.value == '' &&
					   candle_no1_no.value == '' &&
					   candle_no1_num.value == '' &&
					   candle_no2_no.value == '' &&
					   candle_no2_num.value == '' &&
					   candle_no3_no.value == '' &&
					   candle_no3_num.value == ''
					){
						alert('キャンドルを選択してください');
		                return false;
					}
					
					
					//NoキャンドルのNoか本数が未選択ならアラート表示(1)
					if((candle_no1_no.value != '' && candle_no1_num.value == '') ||
					   (candle_no1_no.value == '' && candle_no1_num.value != '')
					){
						alert('NoキャンドルはNoと本数を選択してください');
		                return false;
					}
					
					//NoキャンドルのNoか本数が未選択ならアラート表示(2)
					if((candle_no2_no.value != '' && candle_no2_num.value == '') ||
					   (candle_no2_no.value == '' && candle_no2_num.value != '')
					){
						alert('NoキャンドルはNoと本数を選択してください');
						return false;
					}
					
					//NoキャンドルのNoか本数が未選択ならアラート表示(3)
					if((candle_no3_no.value != '' && candle_no3_num.value == '') ||
					   (candle_no3_no.value == '' && candle_no3_num.value != '')
					){
						alert('NoキャンドルはNoと本数を選択してください');
		                return false;
					}
				}
			}
            
            //--- デコオプション ---
            //---[入力チェック]デコオプション---
			var option_form_deco = 'option_form_deco';
			var option_form_option = 'option_form_option';
			if( (document.getElementById(option_form_deco) != null) && (document.getElementById(option_form_option) != null) ){
				
				//メッセージプレートの不要チェック
				const chk_message_nosel = document.getElementById("chk_message_nosel");
				if(chk_message_nosel.checked != true){
					//・メッセージプレート指定あり
					let PlateSelElms = document.getElementsByName('messageplate');
					let plend = PlateSelElms.length;
					let checkPlate = '';
					for (let i = 0; i < plend; i++){
					    if (PlateSelElms.item(i).checked){
					        checkPlate = PlateSelElms.item(i).value;
					    }
					}
					if(checkPlate == ''){
						alert('メッセージプレートを選択してください');
			            return false;
					}
				}
				
				//デコレーション追加の不要チェック
				const chk_deco_nosel = document.getElementById("chk_deco_nosel");
				if(chk_deco_nosel.checked != true){
					//いちごUP
					const ichigo_chk = document.getElementById("ichigo_chk");
					//フルーツUP
					const fruit_chk = document.getElementById("fruit_chk");
					//生チョコUP
					const namachoco_chk = document.getElementById("namachoco_chk");
					//絵チョコ(4号)
					const echoco_chk = document.getElementById("echoco_chk");
					if(ichigo_chk.checked == false &&
						fruit_chk.checked == false &&
						namachoco_chk.checked == false &&
						echoco_chk.checked == false 
					){
						alert('デコレーション追加を選択してください');
			            return false;
					}
				}
			}
            
            //--- ギフト ---
            //---[入力チェック]包装方法---
			var option_form_noshi = 'option_form_noshi';
			if(document.getElementById(option_form_noshi) != null){
				//包装方法オプションがある場合
				
				//包装方法の不要チェック
				const chk_haiso_nosel = document.getElementById("chk_haiso_nosel");
				if(chk_haiso_nosel.checked != true){
				
					//包装方法選択
					let HaisoSelElms = document.getElementsByName('housouselect');
					let pleng = HaisoSelElms.length;
					let checkHaiso = '';
					for (let i = 0; i < pleng; i++){
					    if (HaisoSelElms.item(i).checked){
					        checkHaiso = HaisoSelElms.item(i).value;
					    }
					}
					if(checkHaiso == ''){
						alert('包装方法を選択してください');
			            return false;
					}
					
					//包装方法「熨斗」選択時に以下をチェックする
					if(checkHaiso == '熨斗'){
						
						//熨斗紙の掛け方選択
						let HKakekataSelElms = document.getElementsByName('noshikakekata');
						let plenk = HKakekataSelElms.length;
						let checkHKakekata = '';
						for (let i = 0; i < plenk; i++){
						    if (HKakekataSelElms.item(i).checked){
						        checkHKakekata = HKakekataSelElms.item(i).value;
						    }
						}
						if(checkHKakekata == ''){
							alert('熨斗紙の掛け方を選択してください');
				            return false;
						}
						
						//掛け紙・包装の種類選択
						let kakehousousyurui = document.getElementsByName('kakehousousyurui');
						let plens = kakehousousyurui.length;
						let checkSyurui = '';
						for (let i = 0; i < plens; i++){
						    if (kakehousousyurui.item(i).checked){
						        checkSyurui = kakehousousyurui.item(i).value;
						    }
						}
						if(checkSyurui == ''){
							alert('掛け紙・包装の種類を選択してください');
				            return false;
						}
						
						//上書きを選択
						let uwagakisentaku = document.getElementsByName('uwagakisentaku');
						let plenu = uwagakisentaku.length;
						let checkUwagaki = '';
						for (let i = 0; i < plenu; i++){
						    if (uwagakisentaku.item(i).checked){
						        checkUwagaki = uwagakisentaku.item(i).value;
						    }
						}
						if(checkUwagaki == ''){
							alert('上書きを選択してください');
				            return false;
						}
					}
				}
			}
            //--- 袋オプション ---
            var option_form_bag = 'option_form_bag';
			if( (document.getElementById(option_form_bag) != null) ){
				//袋オプションがある場合
				
				//持ち帰りポリ袋の不要チェック
				const chk_hukuro_nosel = document.getElementById("chk_hukuro_nosel");
				if(chk_hukuro_nosel.checked != true){
					//・持ち帰りポリ袋指定あり
					
					//--- 持ち帰りポリ袋 ---
					//ポリ袋 中
					const pori_cyu_chk = document.getElementById("pori_cyu_chk");
					//ポリ袋 大
					const pori_dai_chk = document.getElementById("pori_dai_chk");
					//ポリ袋 特大
					const pori_tokudai_chk = document.getElementById("pori_tokudai_chk");
					//選択チェック
					if(pori_cyu_chk.checked == false &&
					   pori_dai_chk.checked == false &&
					   pori_tokudai_chk.checked == false
					   ){
						alert('持ち帰りポリ袋を選択してください');
			            return false;
					}
				}
			}
           
            //チェックに不備がなければtrue
			return true;
        }
    </script>
