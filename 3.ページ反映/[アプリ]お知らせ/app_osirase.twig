    <div class="contents">
      <main>
        <div class="news inner" style="padding-top:110px;">
          
          <div style="width:100%; border-bottom: 1px solid #ECECEC; padding:10px;">
				<span style="color:#A9A9A9;">お知らせ一覧</span>
		  </div>
          
          <div class="news_page_list">
          	<table border="0" cellpadding="0" cellspacing="0" width="100%">
          		<tbody>
          			
          			{% set NewsList = repository('Eccube\\Entity\\News').getList() %}
          			
          			<tr>
          				<td class="line" height="1" bgcolor="#dadada" colspan="2">&nbsp;</td>
          			</tr>
          			{% for News in NewsList %}
	          			<tr bgcolor="#ffffff" height="25">
	          			
	          				<div style="border-bottom: 1px solid #ECECEC; padding:10px;">
	          					<a href="{{ url(eccube_config.eccube_user_data_route, {"route": "app_osirase_detail"}) }}?id={{ News.id }}">
		          					<div style="100%">
		          						<span style="color:#A9A9A9;">{{ News.publish_date|date_day }}</span>
		          						
		          						{% if 'news' in News.url %}
		          						<span class="app_news_type">
		          							NEWS
		          						</span>
		          						{% elseif 'event' in News.url %}
		          						<span class="app_event_type">
		          							イベント
		          						</span>
		          						{% elseif 'info' in News.url %}
		          						<span class="app_info_type">
		          							お知らせ
		          						</span>
		          						{% endif %}
		          					</div>
		          					<div style="100%">
			          					{{ News.title }}
			          				</div>
		          				</a>
	          				</div>
	          				
	          			</tr>
	          			
          			{% endfor %}
          			
          		</tbody>
          	</table>
          </div><!-- .news_page_list-->
        </div><!-- .news -->
      </main>
    </div>
    
{% endblock %}