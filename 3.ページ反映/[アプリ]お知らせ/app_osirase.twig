    <div class="contents">
      <main>
        <div class="news inner" style="padding-top:50px;">
          <h1 class="title"><strong class="agp">NEWS</strong></h1><!-- .title -->
          <div class="news_page_list">
          	<table border="0" cellpadding="0" cellspacing="0" width="100%">
          		<tbody>
          			
          			{% set NewsList = repository('Eccube\\Entity\\News').getList() %}
          			
          			<tr>
          				<td class="line" height="1" bgcolor="#dadada" colspan="2">&nbsp;</td>
          			</tr>
          			{% for News in NewsList %}
	          			<tr bgcolor="#ffffff" height="25">
	          				<td class="lims" width="80%">&nbsp;<a href="{{ url(eccube_config.eccube_user_data_route, {"route": "app_osirase_detail"}) }}?id={{ News.id }}">{{ News.title }}</a></td>
	          				<td class="lims" align="center" width="20%">{{ News.publish_date|date_day }}</td>
	          			</tr>
          			{% endfor %}
          			
          		</tbody>
          	</table>
          </div><!-- .news_page_list-->
          <div class="pager">
          	<table border="0" cellpadding="0" cellspacing="0" width="368">
          		<tbody>
          			<tr>
          				<td class="line" height="10">&nbsp;</td>
          			</tr>
          			<tr>
          				<td align="center"></td>
          			</tr>
          		</tbody>
          	</table>
          </div><!-- .pager -->
        </div><!-- .news -->
      </main>
    </div>
    
