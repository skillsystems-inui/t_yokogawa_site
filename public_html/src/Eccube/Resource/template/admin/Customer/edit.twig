{% block javascript %}
    <script src="//yubinbango.github.io/yubinbango/yubinbango.js" charset="UTF-8"></script>
    <script>
        $(function() {
            // 会員検索
            $('#searchCustomerModalButton').on('click', function() {
                var list = $('#searchCustomerModalList');
                list.children().remove();

                $.ajax({
                    url: '{{ url('admin_customer_search_maincustomer_html') }}',
                    type: 'POST',
                    dataType: 'html',
                    data: {'search_word': $('#admin_search_customer_multi').val()}
                }).done(function(data) {
                    $('#searchCustomerModalList').html(data);
                }).fail(function(data) {
                    alert('search customer failed.');
                });
            });
            
            // 選択代表会員クリア
            $('#searchCustomerClear').on('click', function() {
	            $is_null = '';
	            $('#order_CustomerId').html('選択なし');
	            $('#admin_customer_maincustomer').val($is_null);
	            $('#admin_customer_mainname_mainname').val($is_null);
            });
        });
    </script>
{% endblock javascript %}

